# Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DATABASE_URL="sqlite:///./climate_seed_bank.db"

# API Keys (Get these from respective providers)
OPENWEATHER_API_KEY="your_openweather_api_key_here"
GOOGLE_EARTH_ENGINE_KEY="your_gee_api_key_here"
NASA_API_KEY="your_nasa_api_key_here"

# Security Configuration
SECRET_KEY="your-secret-key-here-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API URLs
WEATHER_API_URL="https://api.openweathermap.org/data/2.5"
CLIMATE_API_URL="https://climateapi.worldbank.org/climateweb/rest/v1"
SOIL_API_URL="https://rest.soilgrids.org"

# Application Configuration
APP_NAME="Climate-Adaptive Seed AI Bank"
APP_VERSION="1.0.0"
DEBUG=True
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# File Storage
UPLOAD_DIRECTORY="./uploads"
MAX_FILE_SIZE=10485760  # 10MB

# AI Model Configuration
MODEL_PATH="./models"
RECOMMENDATION_THRESHOLD=0.7
CLIMATE_PROJECTION_YEARS=10