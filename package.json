{
  "name": "climate-seed-ai-bank",
  "version": "1.0.0",
  "description": "Climate-Adaptive Seed AI Bank - A digital platform for climate-resilient agriculture in Uganda",
  "main": "index.js",
  "scripts": {
    "dev": "npm run backend:dev & npm run frontend:dev",
    "backend:dev": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "backend:install": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run backend:install && npm run frontend:install",
    "test": "cd backend && pytest",
    "start": "npm run backend:prod & npm run frontend:prod",
    "backend:prod": "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000",
    "frontend:prod": "cd frontend && serve -s build -l 3000"
  },
  "keywords": [
    "agriculture",
    "climate-adaptation",
    "AI",
    "seed-intelligence",
    "Uganda",
    "food-security"
  ],
  "author": "Climate-Seed AI Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "serve": "^14.2.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}